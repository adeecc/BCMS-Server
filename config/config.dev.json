{
    "serverConfig": {
        "behindHttps": false
    },
    "dbConfig": {
        "host": "localhost",
        "user": "postgres",
        "password": "admin",
        "max": 20,
        "idleTimeoutMillis": 30000,
        "connectionTimeoutMillis": 2000
    },
    "logConfig": {
        "httpLog": {
            "fname": "httpRequest.log",
            "rfsOptions": {
                "size": "10M",
                "interval": "1d",
                "compress": "gzip"
            },
            "format": ":remote-addr - :remote-user :date[clf] ':method :url HTTP/:http-version' :status :res[content-length] :response-time ':referrer' ':user-agent'"
        },
        "appLog": {
            "streamConfig": {
                "type": "rotating-file",
                "fname": "app.log",
                "period": "1d",
                "count": 7,
                "level": "debug"
            }
        },
        "dbLog": {
            "streamConfig": {
                "type": "rotating-file",
                "fname": "db.log",
                "period": "1d",
                "count": 7,
                "level": "debug"
            }
        }
    },
    "authConfig": {
        "tokenKey": "PandaSUXbalz",
        "tokenAlgorithm": "RS256"
    }
}