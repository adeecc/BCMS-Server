{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start backend",
            "type": "node",
            "request": "launch",
            "env": {
                "NODE_ENV": "dev",
                "DEBUG": "BCMS:*"
            },
            "program": "${workspaceFolder}/bin/www",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "View Documentation",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/swagger-ui-watcher/bin/swagger-ui-watcher.js",
            "args": ["swagger.json"]
        }
    ]
}